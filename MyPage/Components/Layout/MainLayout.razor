@inherits LayoutComponentBase
@inject MyPage.Service.LoginService loginService
@inject ToastService toastservice

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (!loginService.IsLoggedIn)
            {
                <a href="login">Login</a>
            }
            else
            {
                <Icon Name="IconName.PersonFill" Size="IconSize.x3" Style="margin-right: -20px;"/>
                <a class="Login-Name" style="text-decoration:none;  color:black;">
                    Hello, @loginService.UserName</a>
                <a href="logout">Logout</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>

        <Toasts class="p-3" AutoHide="true" Delay="3000" Placement="ToastsPlacement.TopRight" />

    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

